<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <VideoView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentEnd="true"
               android:layout_alignParentTop="true"
               android:id="@+id/videoView"/>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_below="@id/videoView"
                 android:layout_alignParentStart="true" android:layout_alignParentEnd="true"
                 android:layout_height="wrap_content" android:id="@+id/mediaControllerLayout"/>
</RelativeLayout>